################################################################################
APPS = csum hssum fold hw hecho age

################################################################################
CFLAGS = -Wall -Werror -std=c11

################################################################################
.PHONEY: all clean

################################################################################
all: $(APPS)

################################################################################
clean::
	rm -f $(APPS) *.hi *.o

################################################################################
%: %.hs
	ghc --make -Wall -Werror -o $@ $<
